<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Consulta">

    <LinearLayout
                android:id="@+id/layConsulta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <EditText android:id="@+id/txtMail"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="15sp"
        android:hint="Mail"/>

    <EditText android:id="@+id/txtAsunto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:hint="Asunto"
        app:layout_constraintTop_toBottomOf="@id/txtMail"/>

    <EditText android:id="@+id/txtConsulta"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:hint="Consulta"
        app:layout_constraintTop_toBottomOf="@id/txtAsunto"/>

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Consulta"
        app:layout_constraintTop_toBottomOf="@id/txtConsulta"
        app:layout_constraintStart_toStartOf="parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>